<%= render partial: "layouts/navbar" %>

<script>
  $(document).ready('turbolinks:load', function() {
    $('select').material_select();
  });
</script>

<div class="container">
  <h3 class="andra-header twenty-top">Log Experiment Info Below</h3>

<%= form_for @experiment do |f| %>
      <%= f.text_field :title, placeholder: "Title" %>
      <%= f.text_field :hypothesis, placeholder: "Hypothesis" %>
      <%= f.text_field :description, placeholder: "Description" %>
      <p class="dropdown-tag">Length In Minutes: </p>
        <%= f.select :minutes, [1,5,25,50], {}, {:label => "Materialize Select", :class => 'input-field browser-default' }%>
      <p class="dropdown-tag">Photos Per Minute:</p>
        <%= f.select :photo_frequency, [1,5,10,20], {}, {:label => "Materialize Select", :class => 'input-field browser-default' }%>

      <button type="submit" class="btn btn-danger">Create Experiment</button>
<% end %>


<div class="row thirty-top">
  <div class="bubble">
    <div class="center-text">
      <!-- <h4>Welcome back. Don't leave for so long next time!</h4> -->
      <h4>My artifcial intelligence detects greatness within you.</h4>
      <!-- <h4>Follow my orders and you won't have any problems.</h4> -->
    </div>    </div>
</div>
<div class="row">

<div class="col s6 offset-s8">
  <%= image_tag "/assets/standard_smiley.png", class:"standard-andra"%>
</div>
</div>

</div>
